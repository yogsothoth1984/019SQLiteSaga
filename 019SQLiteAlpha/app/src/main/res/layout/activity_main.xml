<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.MainActivity">

    <EditText
        android:id="@+id/editIngCodigo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="46dp"
        android:ems="10"
        android:hint="Ingrese Codigo"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/editIngPrecio"
        app:layout_constraintStart_toStartOf="@+id/editIngPrecio"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editIngDescripcion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="1dp"
        android:ems="10"
        android:hint="Ingrse Descripcion"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/editIngCodigo"
        app:layout_constraintTop_toBottomOf="@+id/editIngCodigo" />

    <EditText
        android:id="@+id/editIngPrecio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginBottom="240dp"
        android:ems="10"
        android:hint="Ingrese Precio"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/buttBaja"
        app:layout_constraintStart_toStartOf="@+id/buttAlta" />

    <Button
        android:id="@+id/buttAlta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="42dp"
        android:layout_marginTop="28dp"
        android:onClick="alta"
        android:text="Alta"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editIngPrecio" />

    <Button
        android:id="@+id/buttConCodigo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:onClick="consultaPorCodigo"
        android:text="Consulta por codigo"
        app:layout_constraintStart_toStartOf="@+id/buttAlta"
        app:layout_constraintTop_toBottomOf="@+id/buttAlta" />

    <Button
        android:id="@+id/buttConDescripcion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Consulta por Descripcion"
        app:layout_constraintStart_toStartOf="@+id/buttConCodigo"
        app:layout_constraintTop_toBottomOf="@+id/buttModificacion" />

    <Button
        android:id="@+id/buttBaja"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="195dp"
        android:text="Baja por codigo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/buttModificacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="13dp"
        android:text="Modificacion"
        app:layout_constraintBaseline_toBaselineOf="@+id/buttConCodigo"
        app:layout_constraintEnd_toEndOf="parent" />
</android.support.constraint.ConstraintLayout>